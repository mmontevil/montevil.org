   {% if datete !== dateit %}
        {% if dateit  !== "temp" %}
         {#</ul> #}
         {% endif %}
         {% set dateit=datete %}
       <h2>{{dateit}}</h2>
    {# <ul>  #}      
    {% endif %}

    {% set aref %}
     <a href={{article.data.page.url}}>{{-article.data.title-}}</a>{%endset%}
