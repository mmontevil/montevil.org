      {% from "macros/pubuttons.njk" import pubuttons %}
   {% from "macros/publabel.njk" import publabel %}
  <h2>Articles</h2>
   <ul>
    {% for article in collections['peer-reviewed'] %}
  <li><p>{{publabel(article.data)|safe}} {{ article.data.bibib | bibcite|divRemove|safe}}</p>
  <p> {{pubuttons(article.data) |safe}}</p>
  </li>
    {% endfor %}
  </ul>
      
  <h2>Chapters</h2>
   <ul>
    {% for article in collections.chapters %}
  <li><p>{{publabel(article.data)|safe}} {{ article.data.bibib | bibcite|divRemove|safe}}</p>
  <p> {{pubuttons(article.data) |safe}}</p>
  </li>
    {% endfor %}
  </ul>
  
    <h2>Varia</h2>
   <ul>
    {% for article in collections.varia %}
  <li><p>{{publabel(article.data)|safe}} {{ article.data.bibib | bibcite|divRemove|safe}}</p>
  <p> {{pubuttons(article.data) |safe}}</p>
  </li>
    {% endfor %}
  </ul>

  
  <h2>By date</h2>
   
{% set dateit="temp" %}
    {% for article in collections.publications |sortByOrder |reverse %}
    {% set datete=article.data.bibentry.issued['date-parts'][0][0] %}
