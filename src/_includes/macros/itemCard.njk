{% from "macros/postCard.njk" import postCard %}
{% from "macros/linkCard.njk" import linkCard %}
{% from "macros/noteCard.njk" import noteCard %}
{% from "macros/pubCard.njk" import pubCard %}
{% from "macros/talkCard.njk" import talkCard %}

{% macro itemCard(item,numbers2) %}
    {% if item.data.layout == "post" %}
      {{ postCard(item) }}
    {% elif item.data.layout == "link" %}
      {{ linkCard(item) }}
    {% elif item.data.layout == "note" %}
      {{ noteCard(item) }}
    {% elif item.data.layout == "publication" %}
      {{ pubCard(item,numbers2) }}
          {% elif item.data.layout == "talk" %}
      {{ talkCard(item) }}
    {% endif %}
{% endmacro %}
