



{% from "macros/meta.njk" import meta %}
{% from "macros/card.njk" import card %}
   {% from "macros/publabel.njk" import publabel %}
 {% from "macros/pubuttons.njk" import pubuttons %}

{% macro pubCard(article,numbers2) %} 

{% set rid -%}
{{-numbers2| random-}}
{%- endset %}

 {% if article.data.illust %}
 {% set srcurl-%}{{-article.data.page.url-}}{{- article.data.illust-}}{%-endset%}
{%-elif article.data.bibentry.URL-%}
{% set srcurl-%}https://image.thum.io/get/width/1200/crop/800/noanimate/{{ article.data.bibentry.URL }}{%-endset%}
{%-elif article.data.bibentry.DOI-%}
{% set srcurl-%}https://image.thum.io/get/width/1200/crop/800/noanimate/https://dx.doi.org/{{ article.data.bibentry.DOI }}{%-endset%}
{%-endif-%} 

 
  {% if srcurl -%}
  {% set illustration = {
    src:  srcurl,
    alt:  article.data.title,
    width: 1200,
    height: 800,
    classes: article.data.illustClass
  } %}
{% endif %}

  {% if article.data.bibentry['container-title'] -%}
  {% set subtitle -%} <i>{{article.data.bibentry['container-title']}}</i> {%-endset%}
{% endif %}


  {% set content %}
  {% if article.data.excerpt %}
    <p class="card__body p-summary">  {{article.data.excerpt}}   </p> 
{% endif %}
  
  <div class="card__body p-summary smalltext"><p >{{publabel(article.data)|safe}} {% icon "reference", "reference" %}
{{ article.data.bibentry | bibcite2| urlize( article.data.title,article.data.page.url, article.data.bibentry.type)|divRemove|safe}} </p></div>


 <div class="accordion">{% if not  (article.data.bibentry.abstract === undefined) %}
  <input type="checkbox" name="{{-article.data.bibentry.id-}}{{-rid-}}" id="{{-article.data.bibentry.id-}}{{-rid-}}" >{% endif %}
  <p class="handle">
   <span  class="smalltext">{{pubuttons(article.data) |safe}}</span> {% if not  (article.data.bibentry.abstract === undefined) %}<label for="{{-article.data.bibentry.id-}}{{-rid-}}" class="smalltext"><span class="abssvg folded">{% icon "chevronRight", "Link" %}</span><span class="abssvg unfolded">{% icon "chevronDown", "Link" %}</span>Abstract</label>
  </p>
  <div class="content">
     <p > <span class="paragraphHead2"> Abstract: </span>  {{ article.data.abstract  | safe }}</p >
     {% if not  (article.data.bibentry.keyword === undefined) %}
          <p > <span class="paragraphHead2"><em> Keywords: </em></span>  {{ article.data.keyword  | safe }}</p >
           {% endif %}
  </div>{% endif %}
</div>
 
  {% endset %}

  {% set meta %}
  {{ meta(article) }}
  {% endset %}

  {{ card(
    type = 'article',
    subtitle =subtitle,
    lang = article.data.lang,
    title = article.data.title,
    url = article.url,
    illustration = illustration,
    content = content,
    meta = meta) }}
{% endmacro %}
