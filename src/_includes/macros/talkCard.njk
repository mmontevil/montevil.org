{% from "macros/meta.njk" import meta %}
{% from "macros/card.njk" import card %}

{% macro talkCard(talk) %}



  {% set content %}
{{- talk.templateContent | excerpt | truncateHtml (300) | safe -}}
  {% endset %}
  {%if not (content==="")%}
  {% set content %}
<p class="card__body p-summary svgfill">{{content}}</p>
{% endset %}
{%endif%}

  {% set meta %}
  {{ meta(talk) }}
  {% endset %}

  {{ card(
    type = 'talk',
    lang = talk.data.lang,
    title = talk.data.title,
    url = talk.url,
    illustration = talk.data.illustration,
    content = content,
    meta = meta) }}
{% endmacro %}



