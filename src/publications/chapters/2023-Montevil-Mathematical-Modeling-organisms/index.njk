            <mrow>
              <mrow>
                <mstyle mathvariant="italic">
                  <mtext>dn</mtext>
                </mstyle>
                <mo stretchy="false">/</mo>
                <mstyle mathvariant="italic">
                  <mtext>dt=n</mtext>
                </mstyle>
                <mo stretchy="false">/</mo>
                <mi>τ</mi>
              </mrow>
              <mrow>
                <mo fence="true" form="prefix" stretchy="true">(</mo>
                <mrow>
                  <mrow>
                    <mn>1</mn>
                    <mo stretchy="false">−</mo>
                    <mrow>
                      <mi>n</mi>
                      <mo stretchy="false">/</mo>
                      <mi>k</mi>
                    </mrow>
                  </mrow>
                </mrow>
                <mo fence="true" form="postfix" stretchy="true">)</mo>
              </mrow>
              <mrow>
                <mstyle mathvariant="italic">
                  <mtext>≃n</mtext>
