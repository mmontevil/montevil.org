            <msup>
                <mrow>
                    <mrow><mi mathvariant="-tex-caligraphic">D</mi></mrow>
                </mrow>
                <mrow><mn>0</mn></mrow>
            </msup>
            <mrow>
                <mo>[</mo>
                <mrow>
                    <msup>
                        <mrow>
                            <mrow><mi mathvariant="-tex-caligraphic">D</mi></mrow>
                        </mrow>
                        <mrow><mn>1</mn></mrow>
                    </msup>
                </mrow>
                <mo>]</mo>
            </mrow>
