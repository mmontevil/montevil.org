          </msup>
          <mrow>
            <mo fence="true" form="prefix">(</mo>
            <mrow>
              <mn>1</mn>
              <mo class="MathClass-bin">−</mo>
              <mn>4</mn>
              <mi>c</mi>
              <mfrac>
                <mrow>
                  <mn>2</mn>
