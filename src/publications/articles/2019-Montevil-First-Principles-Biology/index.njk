      </msub>
      <mo class="MathClass-bin">+</mo>
      <msubsup>
        <mrow>
          <mi>q</mi>
        </mrow>
        <mrow>
          <mn>1</mn>
        </mrow>
        <mrow>
          <mi>′</mi>
        </mrow>
