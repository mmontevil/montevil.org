{
  "name": "montevil.org",
  "version": "4.0.1",
  "type": "module",
  "title": "Maël Montévil, research in theoretical biology",
  "description": "This is the personnal website of Maël Montévil.",
  "author": {
    "name": "Maël Montévil",
    "email": "mael.montevil@gmail.com",
    "url": "https://montevil.org/"
  },
  "license": "MIT",
  "homepage": "https://montevil.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmontevil/montevil.org"
  },
  "scripts": {
    "clean": "rimraf _site",
    "sass": "sass --no-source-map assets/sass:_site/css",
    "postcss": "postcss _site/css/*.css --no-map --replace",
    "build:sass": "npm-run-all --sequential sass postcss",
    "watch:sass": "sass --source-map-urls=absolute --watch assets/sass:_site/css",
    "build:js": "esbuild assets/js/*.js --bundle --format=esm --splitting=true --target=es2020 --outdir=_site/js --minify --sourcemap",
    "start:js": "esbuild assets/js/*.js --bundle --format=esm --splitting=true --target=es2020 --outdir=_site/js --sourcemap=inline --watch",
    "build:eleventy": " eleventy",
    "watch:eleventy": " eleventy --serve ",
    "serviceworker:inject": "workbox generateSW workbox.config.cjs",
    "start": " NODE_ENV=development npm-run-all  --sequential clean build:js   --parallel watch:*",
    "build": " NODE_ENV=production npm-run-all --sequential clean --parallel  build:js  build:sass --sequential build:eleventy serviceworker:inject",
    "build:netlify": " NODE_ENV=production npm-run-all --sequential clean --parallel build:js   build:sass --sequential build:eleventy serviceworker:inject",
    "webmention": "node ./_scripts/update-webmention.cjs",
    "build:epub": " NODE_ENV=epub npm-run-all --sequential clean --parallel  build:js  build:sass --sequential build:eleventy ",
    "sprite": "node ./_scripts/generate-svg-sprite.js",
    "scholar": "node ./_scripts/scholar.js",
    "people": "node ./_scripts/updateAuthors.js",
    "bib": "(cd BIB; ./updatebib.sh)",
    "updateall": "npm-run-all build  bib sprite webmention scholar build people build:epub",
    "build:debug": "DEBUG=Eleventy* npm run build",
    "build:benchmark": "DEBUG=Eleventy:Benchmark* npm run build",
    "start:debug": "DEBUG=Eleventy* npm start",
    "c8build": "c8 npm run build && c8 --reporter=html report",
    "benchmark": "DEBUG=Eleventy:Benchmark* npx @11ty/eleventy >bench.txt 2>&1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-navigation": "^1.0.5",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@sindresorhus/slugify": "3.0.0",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "citation-js": "^0.7.22",
    "clean-css": "^5.3.3",
    "cssnano": "7.1.2",
    "debug": "^4.4.3",
    "deepmerge": "^4.3.1",
    "dotenv": "^17.2.3",
    "eleventy-plugin-images-responsiver": "^3.0.0",
    "eleventy-plugin-link_to": "^0.4.1",
    "eleventy-plugin-nesting-toc": "github:mmontevil/eleventy-plugin-nesting-toc",
    "eleventy-plugin-reading-time": "^0.0.1",
    "eleventy-plugin-toc": "^1.1.5",
    "eleventy-plugin-youtube-embed": "^1.13.1",
    "feather-icons": "^4.29.2",
    "html-minifier-next": "^4.16.4",
    "image-size": "^2.0.2",
    "linkedom": "0.18.12",
    "linkify-string": "^4.3.2",
    "lodash.clonedeep": "^4.5.0",
    "markdown-it": "~14.1",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-container": "^4.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-html5-media": "^0.8.0",
    "markdown-it-plain-text": "^0.3.0",
    "memoize": "^10.2.0",
    "modern-css-reset": "^1.4.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "postcss-cli": "^11.0.1",
    "postcss-hash": "^3.0.0",
    "postcss-var-optimize": "^8.1.0",
    "purgecss": "^7.0.2",
    "rimraf": "^6.1.2",
    "sanitize-html": "^2.17.0",
    "sass": "~1.97.1",
    "simple-icons": "~16.3.0",
    "svgstore": "^3.0.1",
    "to-vfile": "^8.0.0",
    "vfile-reporter": "^8.1.1",
    "workbox-broadcast-update": "7.4.0",
    "workbox-cacheable-response": "7.4.0",
    "workbox-cli": "^7.4.0",
    "workbox-core": "7.4.0",
    "workbox-expiration": "7.4.0",
    "workbox-precaching": "7.4.0",
    "workbox-routing": "7.4.0",
    "workbox-strategies": "7.4.0"
  },
  "engines": {
    "node": ">=22"
  },
  "private": true,
  "dependencies": {
    "@lesjoursfr/html-to-epub": "^5.0.2",
    "@mathjax/src": "^4.1.0",
    "bib2json": "^0.0.1",
    "c8": "^10.1.3",
    "dice-coefficient": "^2.1.1",
    "epub-gen-memory": "^1.1.2",
    "esbuild": "^0.27.2",
    "luxon": "^3.7.2",
    "npm-run-all": "^4.1.5",
    "rehype": "^13.0.2",
    "rehype-add-classes": "^1.0.0",
    "rehype-format": "^5.0.1",
    "rehype-slug": "^6.0.0",
    "selenium-webdriver": "*"
  }
}
